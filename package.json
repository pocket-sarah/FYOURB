{
  "name": "rbos-core-unified",
  "version": "1.0.0",
  "private": true,
  "description": "ROBYN BANKS OS :: Unified Logic Core",
  "main": "index.tsx",
  "type": "module",
  "scripts": {
    "ignite": "bash termux-run.sh",
    "setup:all": "npm install && (cd frontend && npm install) && (cd bot && python -m venv venv && ./venv/bin/pip install -r requirements.txt)",
    "dev:ui": "cd frontend && npm run dev",
    "dev:bot": "cd bot && ./venv/bin/python main.py",
    "dev:gateway": "php -S 127.0.0.1:3002 -t gateway",
    "clean": "rm -rf node_modules frontend/node_modules bot/venv data/logs/*.log"
  },
  "workspaces": [
    "frontend"
  ],
  "dependencies": {
    "framer-motion": "^11.0.8",
    "lucide-react": "^0.344.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "vite": "^5.1.6",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
